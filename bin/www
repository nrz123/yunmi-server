const fs = require('fs')
const configPath = './config.json'
const start = () => {
  var app = require('../app.js')
  var debug = require('debug')('webserver:server');
  var http = require('http');
  var port = normalizePort(global.appConfig.port);
  app.set('port', port);
  var server = http.createServer(app);
  require('express-ws')(app, server)
  server.listen(port);
  server.on('error', onError);
  server.on('listening', onListening);
  function normalizePort(val) {
    var port = parseInt(val, 10);
    if (isNaN(port)) {
      return val;
    }
    if (port >= 0) {
      return port;
    }
    return false;
  }
  function onError(error) {
    if (error.syscall !== 'listen') {
      throw error;
    }
    var bind = typeof port === 'string'
      ? 'Pipe ' + port
      : 'Port ' + port;

    switch (error.code) {
      case 'EACCES':
        console.error(bind + ' requires elevated privileges');
        process.exit(1);
        break;
      case 'EADDRINUSE':
        console.error(bind + ' is already in use');
        process.exit(1);
        break;
      default:
        throw error;
    }
  }
  function onListening() {
    var addr = server.address();
    var bind = typeof addr === 'string'
      ? 'pipe ' + addr
      : 'port ' + addr.port;
    debug('Listening on ' + bind);
  }
}
const init = async () => {
  try {
    const ConfigJson = JSON.parse(fs.readFileSync(configPath))
    global.appConfig = {}
    let appConfig = ConfigJson.appConfig
    if (appConfig) {
      for (let key in appConfig) {
        global.appConfig[key] = appConfig[key]
      }
    }
    console.log(global.appConfig)
  } catch (e) {
    console.log('读取配置文件异常,程序退出')
    process.exit()
  }
  if (!fs.existsSync(global.appConfig.dest)) {
    fs.mkdir(global.appConfig.dest, (err) => {
      if (err) {
        console.log('dest文件夹创建失败,程序退出')
        process.exit()
      } else {
        console.log('dest文件夹创建成功');
      }
    })
  }
  global.connectMysql = () => new Promise(resolve => {
    let conn = require('mysql2').createConnection({ ...global.appConfig.mysql, multipleStatements: true })
    conn.connect(e => resolve(e ? conn.end() : conn))
  })
  let conn = await global.connectMysql()
  if (!conn) {
    console.log('无法连接数据库,程序退出')
    process.exit()
  }
  conn.end()
  start()
}
init()
